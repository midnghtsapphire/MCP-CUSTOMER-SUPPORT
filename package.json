### src/mct/tools.ts
import { McpServer } from '@modelcontextprotocol/sdk/server/mcp.js';
import { handleCustomerQuery } from '../services/customerService';
export function registerSupportTools(server: McpServer) {
  server.registerTool("fetchCustomerData", {
    title: "Fetch Customer Data",
    description: "Retrieves customer data by ID",
    inputSchema: { customerId: 'string' },
    outputSchema: { customerData: 'object' }
  }, async ({ customerId }) => {
    return handleCustomerQuery(customerId);
  });
}
